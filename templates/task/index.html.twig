{% extends 'base.html.twig' %} {% block title %}Task index{% endblock %} {%
block body %}
<h1>Task index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>IsDone</th>
            <th>DueAt</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for task in tasks %}
        <tr>
            <td>{{ task.title }}</td>
            <td>{{ task.isDone ? "Yes" : "No" }}</td>
            <td>{{ task.dueAt ? task.dueAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('app_task_show', { id: task.id }) }}">show</a>
                <a href="{{ path('app_task_edit', { id: task.id }) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_task_new') }}">Create new</a>
{% endblock %}
